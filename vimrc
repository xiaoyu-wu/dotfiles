syntax on

" Make it obvious where 80 characters is
set textwidth=80
set colorcolumn=+1

" Numbers
set number
set numberwidth=5

" Display command at the last line
set showcmd

" Search: highlight, ignorecase, incsearch
set hlsearch
set ignorecase
set incsearch

" Open new split panes to right and bottom, which feels more natural
set splitbelow
set splitright
